{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "label": "tsc",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "shell",
      "label": "swagger",
      "command": "cpx \"src/**/*.yaml\" dist/",
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "Build",
      "dependsOn": ["tsc", "swagger"]
    }
  ]
}
